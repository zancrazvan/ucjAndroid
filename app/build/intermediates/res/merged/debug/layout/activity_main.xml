<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.slidingmenu_tabhostviewpager.MainActivity">

    <!-- Main content (main screen) -->

    <RelativeLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <!-- Drawer Pane -->

    <RelativeLayout
        android:id="@+id/drawer_pane"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <!-- Profile box -->

        <RelativeLayout
            android:id="@+id/profile_box"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/background_material_dark"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ucjlogo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/icon"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Universitatea Cluj"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

               <!-- <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PTIT HCM"
                    android:textColor="#fff"
                    android:textSize="16sp" />-->
            </LinearLayout>
        </RelativeLayout>

        <!-- Navigation Listview -->

        <ListView
            android:id="@+id/nav_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_box"
            android:background="#ffffff"
            android:choiceMode="singleChoice">

        </ListView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout><!-- From: file:/C:/Users/Zanc/Desktop/AndroidProjects/SlidingMenu_TabHostViewPager/app/src/main/res/layout/activity_main.xml -->